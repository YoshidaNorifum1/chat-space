.side-bar
  .side-bar__user
    .side-bar__user-name
      = current_user.name
    = link_to edit_user_path(current_user), class: "side-bar__user-icon" do
      = icon('fas', "cog")
    = link_to new_group_path, class: "side-bar__user-icon" do
      = icon('fas', 'edit')
  .side-bar__groups
    .side-bar__group
      - current_user.groups.each do |group|
        .side-bar__group-name
          = group.name
        .side-bar__group-message
          = group.show_last_message